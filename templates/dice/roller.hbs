<div class="primeDiceRollDialog">
	<div class="primeDiceTitle">
		{{#ifCond actors.length ">" 0}}
		<span class="character">
			{{#ifCond actors.length ">" 1}}
			<select id="primeDiceRollerActorSelect">
				{{#each actors}}
				<option value="{{this.id}}">{{this.name}}</option>
				{{/each}}
			</select>
			{{else}}
			{{actors.[0].name}}
			{{/ifCond}}</span>
		{{/ifCond}}
		<span class="autorollContainer">
			<label for="autoroll">Autoroll</label>
			<input type="checkbox" id="autoroll"
			{{#if autoroll}}checked{{/if}}
			>
		</span>
		
		<span class="autocloseContainer">
			<label for="autoclose">Autoclose</label>
			<input type="checkbox" id="autoclose"
			{{#if autoclose}}checked{{/if}}
			>
		</span>
		
		<select class="roll-type-select" name="primeDiceRollMode">
            <option value="roll" selected="">Public</option>
            <option value="gmroll">GM</option>
            <option value="blindroll">Blind</option>
            <option value="selfroll">Self</option>
        </select>
	</div>

	<div class="primeDiceRollWrapper">
		<div class="statsContent flexRow flexWrap flexBetween">
			{{#each this.sortedStats as |typeGroup key|}}
			<div class="primesGroup primeGroup_{{key}}">
				{{#ifCond key "==" "physical" }}
				<div class="blockTitle">Primes</div>
				{{/ifCond}}
				{{#each typeGroup.primes as |prime key|}}
				<button class="primeWrapper selectPrime" data-prime-key="{{key}}" data-prime-value="{{prime.value}}">
					<span class="primeTitle">{{prime.title}}</span>
					<span class="primeValue">{{prime.value}}</span>
				</button>
				{{/each}}
			</div>
			<div class="refinementsGroup refinementGroup_{{key}}">
				{{#ifCond key "==" "physical" }}
				<div class="blockTitle">Refinements</div>
				{{/ifCond}}
				{{#each typeGroup.refinements as |refinement key|}}
				<button class="refinementWrapper selectRefinement" data-refinement-key="{{key}}"
					data-refinement-value="{{refinement.value}}"
					data-refinement-default-prime="{{refinement.defaultPrime}}">
					<span class="refinementTitle">{{refinement.title}}</span>
					<span class="refinementValue">{{refinement.value}}</span>
				</button>
				{{/each}}
			</div>
			{{/each}}
		</div>
		<div class="roll-footer">
			<div class="number-field">
				<label class="number-label" for="raw-modifier">Modifier:</label>
				<input class="number-input" id="raw-modifier" data-modifier="raw" type="number" value="0" step="1" min="-20" max="20">
				<div class="number-buttons">
					<i class="number-button increment fas fa-plus-circle"></i>
					<i class="number-button decrement fas fa-minus-circle"></i>
				</div>
			</div>
			<button class="rollPrimeDice">Roll!</button>
		</div>
	</div>


	<div class="primeDiceRollerHelp">
		<span>{{localize "PRIME.diceRoller.help"}}</span>
	</div>
</div>